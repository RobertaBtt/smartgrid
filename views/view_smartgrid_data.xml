<?xml version="1.0"?>
<openerp>
    <data>

        <record id="view_sg_data_tree" model="ir.ui.view">
            <field name="name">sg.data.tree</field>
            <field name="model">sg.data</field>
            <field name="arch" type="xml">
                <tree string="Smartmeters data">
                    <field name="count"/>
                    <field name="measurement_ts"/>
                    <field name="sender_id"/>
                    <field name="energia_attiva_prelievo"/>
                    <field name="potenza_attiva"/>
                    <field name="create_date"/>
                    <field name="create_uid"/>
                    <field name="write_uid"/>
                    <field name="write_date"/>
                </tree>
            </field>
        </record>

         <!-- Action -->
       <record id="action_sg_data" model="ir.actions.act_window">
           <field name="name">Smartmeters data</field>
           <field name="res_model">sg.data</field>
           <field name="view_type">form</field>
           <field name="view_mode">tree</field>
       </record>



    </data>
</openerp>
